{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Pokemons",
    "description": "**This API lets you read, update, add and delete 1st generation Pokemons and their stories.**\n\nhost: localhost\n"
  },
  "basePath": "/pokemons",
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json",
    "text/xml"
  ],
  "produces": [
    "application/json",
    "text/html"
  ],
  "paths": {
    "/pokemons": {
      "get": {
        "summary": "Returns all pokemons",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Number of pokemons to return",
            "type": "integer",
            "default": 1,
            "minimum": 1,
            "maximum": 151
          }
        ],
        "responses": {
          "200": {
            "description": "List all pokemons",
            "schema": {
              "title": "Pokemons",
              "type": "array",
              "items": {
                "$ref": "#/definitions/Pokemon"
              }
            }
          },
          "400": {
            "description":"Invalid value"
          }
        }
      },
      "post": {
        "summary": "Adds a new pokemon",
        "parameters": [
          {
            "name": "pokemon",
            "in": "body",
            "description": "The Pokemon JSON you want to post",
            "schema": {
              "$ref": "#/definitions/Pokemon"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Pokemon added successfully!"
          },
          "405": {
            "description": "Invalid input"
          }
        },
        "security": [
          {
            "pokemon_auth": [
              "write_pokemons",
              "read_pokemons"
            ]
          }
        ]
      },
      "put": {
        "summary": "Updates an existing pokemon",
        "parameters": [
          {
            "name": "pokemon",
            "in": "body",
            "description": "The pokemon JSON you want to update",
            "schema": {
              "$ref": "#/definitions/Pokemon"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Pokemon updated successfully"
          },
          "404": {
            "description": "Pokemon not found!"
          }
        },
        "security": [
          {
            "api_key": []
          },
          {
            "pokemon_auth": [
              "write_pokemons",
              "read_pokemons"
            ]
          }
        ]
      }
    },
    "/pokemons/{pokemonId}": {
      "get": {
        "summary": "Returns a single pokemon",
        "parameters": [
          {
            "name": "pokemonId",
            "in": "path",
            "type": "integer",
            "format": "int64",
            "description": "Lets you see the requested pokemon and its story",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the pokemon with requested pokemonId"
          },
          "400": {
            "description": "Invalid pokemonId value"
          }
        }
      },
      "delete": {
        "summary": "Deletes a pokemon by its ID",
        "parameters": [
          {
            "name": "pokemonId",
            "in": "path",
            "type": "integer",
            "format": "int64",
            "description": "Deletes the pokemon with requested pokemonId",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Invalid pokemonId value"
          },
          "200":{
            "description":"Pokemon deleted successfully"
          }
        },
        "security": [
          {
            "pokemon_auth": [
              "write_pokemons",
              "read_pokemons"
            ]
          }
        ]
      }
    }
  },
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    },
    "pokemon_auth": {
      "type": "oauth2",
      "authorizationUrl": "http://example.com",
      "flow": "implicit",
      "scopes": {
        "write_pokemons": "modify pokemons",
        "read_pokemons": "view pokemons"
      }
    }
  },
  "definitions": {
    "Pokemon": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "format": "text"
        }
      }
    }
  }
}